<%= render 'templates/navbar' %>

<p id="notice"><%= notice %></p>
<div class="row page-header">
  <div class="col-sm-6 text-center">
    <h1>Listing Records</h1>
  </div>
  <div class="col-sm-4 text-right">
    <% if @current_user_login%>
      <%= link_to 'New Record', new_record_path, :class => 'btn btn-primary' %>
    <%end%>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">

  </div>
  <div class="col-sm-8">
      <% @records.each do |record| %>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3><%= record.theme %></h3>
          </div>
          <div class="panel-body">
            <%= record.body %>            
          </div>
          <div>
            <div class="row">
              <div class="col-sm-1">P—ç
                <%= record.rating %>                
              </div>
              <div class="col-sm-8">
                <%= link_to 'Show', record %>
              </div>
              <div class="col-sm-2">
                Author: <%= record.user_id %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
  <div class="col-sm-2">

  </div>
</div>
